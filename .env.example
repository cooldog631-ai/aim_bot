# Bot Configuration
MESSENGER_TYPE=telegram  # telegram, vkmax, or both
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
VK_BOT_TOKEN=your_vk_bot_token_here  # Classic VK API
VK_MAX_TOKEN=your_vk_max_token_here  # VK Max Messenger Bot API

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Whisper Configuration
WHISPER_MODEL=base  # tiny, base, small, medium, large
USE_LOCAL_WHISPER=false  # true для локальной модели, false для API

# LLM Configuration
LLM_PROVIDER=openai  # openai, anthropic, local
LLM_MODEL=gpt-4  # gpt-4, gpt-3.5-turbo, claude-3-sonnet-20240229
LOCAL_LLM_URL=http://localhost:1234/v1  # для LM Studio

# Database
DATABASE_URL=sqlite:///./aim_bot.db
# DATABASE_URL=postgresql://user:password@localhost:5432/aim_bot  # для PostgreSQL

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Session
SESSION_TIMEOUT=3600  # в секундах (1 час)

# Reports
REPORT_REMINDER_TIME=18:00  # время напоминания о несданных отчетах
REQUIRED_FIELDS=date,equipment_number,brigade_number,work_description

# Security
ALLOWED_USERS=  # comma-separated list of allowed messenger IDs (пусто = все разрешены)
ADMIN_USERS=  # comma-separated list of admin messenger IDs
